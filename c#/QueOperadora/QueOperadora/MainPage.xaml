        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True" Opacity="1.0">
            <shell:ApplicationBarIconButton IconUri="/Images/add.png" Text="Adicionar" IsEnabled="True" />
            <shell:ApplicationBarIconButton IconUri="/Images/cancel.png" Text="Sair" IsEnabled="True" />
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="Adicionar aos contatos" IsEnabled="True"/>
                <shell:ApplicationBarMenuItem Text="Sair" IsEnabled="True"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar-->

</phone:PhoneApplicationPage>